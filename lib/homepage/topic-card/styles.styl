.topic-container
  display inline-block
  position relative
  margin 15px
  width 260px
  background-color #fff
  border-radius 4px
  box-shadow 0 2px 2px rgba(0,0,0,0.2)

  &:hover
    text-decoration none

  .topic-card
    display flex
    flex-direction column
    padding 0 20px 40px

    .pic, .no-pic
      position relative
      height 170px
      margin 0 -20px 0 -20px
      border-radius 4px 4px 0 0
      background-size cover
      background-color #e8e8e8

      &:after
        background-color #0273ba
        position absolute
        right 0
        top 0
        width 100%
        height 100%
        border-top-left-radius 4px
        border-top-right-radius 4px
        opacity .2

    .author
      display flex
      align-items center
      margin-top 18px

      .author-img
        width 45px
        height 45px
        border-radius 50%
        margin-right 10px
        background-position center
        background-size 50px auto

      p
        margin 0
        line-height 1.3
        font-size 0.83em

        span
          font-weight 700

    .title
      margin-top 20px
      color #111
      font-size 1.3em
      font-weight 400
      line-height 1.3

  .participando
    position absolute
    bottom 0
    font-size .85em
    margin 9px 0
    font-weight 100
    color #6a6a6a

    strong
      color #0273BA

  &:hover
    background-color #64476e

    .title,
    .participando,
    .participando strong
      color #fff

    .pic:after
      content ''