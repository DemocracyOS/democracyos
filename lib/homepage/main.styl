/* Site Content Container
-------------------------------------------------- */
body.browser-page
	section#content
		display: none;

section.site-content
	top: header_height;
	left: nav_proposal_width;
	right: 0;
	bottom: 0;
	&#content
		z-index: 12;
		left: 0;


/* Proposal Aside Navigation
-------------------------------------------------- */
.dropdown-department
	padding:  15.5px spacing;
	background-color: #BDC3C7;
	display: block;
	.btn-group
		float: none;
		width: 100%;
		button.btn.btn-default
			background-color: #7F8C8D;
			font-size: 12px;
			color: white;
			text-align: left;
			&.dropdown-toggle
				background-color: #727f80;
			&.current-department
				width: 174px;
		.dropdown-menu
			width: 210px;
			border-radius: border_radius;
			li 
				display: block
				width: 100%;
			a 
				display: block
				white-space: normal;
				font-weight: bold
				text-transform: uppercase
				font-size: 12px;
				padding: 6px 14px;
				&:hover 
					background: #f1f1f1;
					color: #333;


aside.nav-proposal 
	top: header_height;
	left: 0;
	bottom: 0;
	width: nav_proposal_width;
	border-right: 1px solid #BDC3C7;
	overflow-y: scroll;
	background: #ECF0F1;
	z-index: 10;
	.navlist
		li 
			border-bottom: 1px solid lighten(#BDC3C7, 40%);
			a 
				padding-left: spacing;
				padding-top: 14px;
				padding-bottom: 14px;
				color: black;	
				position: relative;
				padding-left: 70px;
				color: #666;
				min-height: 60px;

				.item-tag
					position: absolute;
					left: spacing;
					top: spacing;
					color: white;
					svg.hexagon 
						width: 40px;
						height: 40px;
						left: 0;
						top: -8px;
						position: absolute;
						opacity: .2;
						// polygon
						// 	fill: #BDC3C7;
					img 
						width: 20px;
						height: 20px;
						position: absolute;
						z-index: 100;
						width: 30px;
						left: 5px;
						top: 2px;

				&:hover 
					background: #fff;

				span.title
					font-size: 15px;
					line-height: 19px;
					font-weight: bold;
					display: block;
					margin-bottom: 0px;

				span.created-by
					font-size: 11px;
					opacity: .5;

	.navlist
		li.active 
			a			
				.item-tag
					svg.hexagon 
						opacity: 1;		
			&.active 
				a 
					background: #fff;
					color: black;


.proposal-type
	position: absolute;
	left: 14px;
	top: 20px;
	background: #F1C42E;
	color: white;
	border-radius: 100px;
	padding: 10px;
	line-height: 10px;
	&.proposal-type-2
		background-color: #E67E22;




/* Proposal View
-------------------------------------------------- */
article.proposal
	margin: 40px auto;  
	min-height: 300px;
	font-size: 18px;
	line-height: 1.5;
	position: relative;

	.entry-tag
		font-weight: bold
		font-size: 11px;
		text-transform: uppercase
		text-align: center 
		position: absolute; 
		left: -140px;
		width: 100px;
		top: 44px;
		img 
			width: 40px;
			height: 40px;
			left: 30px;
			top: 20px;
			position: absolute;

		.hexagon 
			width: 80px;
			height: 80px;


	.summary
		font-size: 110%;
		margin: 40px 0;
	
	.clauses
		p.clause
			img
				width:100%;
	h1
		margin-top: 0;
		margin-bottom: 30px;

	.meta-information
		margin-bottom: 10px;
		opacity: .6;
		color: black
		.icon-time
			margin-right: 6px;
			color: #666;
		.meta-timeago, .meta-timeago-label
			display: inline-block;
		.meta-item
			color:black
		.label
			margin-right:10px;
			display:inline-block;
			border-radius:0;
	
	hr 
		border-top: 4px solid #eee;
		width: 50%;

	.read-more
		display: block;
		text-transform: capitalize;
		margin-top: 10px;
		margin-bottom: 20px;
	.footer-notes 
		color: #666;
		margin-bottom: 20px;

	.participants
		font-weight: bold;
		padding: 10px 0;
		margin: 30px 0;
		border-top: 2px solid #f1f1f1;
		border-bottom: 2px solid #f1f1f1;
		.participant-profile 
			margin-left: 10px;
			display: inline-block;
			img
				width: 30px;
				height: 30px;
		.view-more
			background: #f1f1f1;
			padding: 2px 10px;
			color: #333;
			margin-left: 6px;
			margin-top: 2px;
			display: inline-block
			border-radius: border_radius;

	.links
		p
			span.glyphicon
				font-size: 12px
				margin-right: 5px
			a
				font-size: 16px
				color: #333;
				font-weight: bold

	.share-links
		margin-bottom: 40px;
		a 
			background: #ccc;
			padding: 10px;
			margin-right: 10px;
			border-radius: border_radius;
			color: white;
			display: inline-block
			line-height: 10px;
			-webkit-transition: all 0.3s ease;

			&:hover 
				text-decoration: none;

			&.facebook:hover
				background: #3b5998;

			&.twitter:hover
				background: #3498db;

			&.google-plus:hover
				background: #c0392b;


.proposal-options
	margin-bottom: 50px;
	.vote-options
		.proxy-vote
			display: inline-block;
		.vote-option
			display: inline-block;
			width: 30%;
			margin-right: 5%;	
			color: white;
			text-transform: uppercase;
			font-weight: bold;
			border-radius: border_radius;
			margin-bottom: 20px;
			padding: 14px;
			-webkit-transition: all 0.3s ease;

			.flaticon
				display: inline-block
				margin-right: 14px;
			span 
				display: inline-block;
			&.vote-yes
				background-color: #a4cb53;
				&:hover 
					background-color: darken(#a4cb53, 40%);
			&.vote-no
				background-color: #d95e59;
				margin-right: 0;
				&:hover 
					background-color: darken(#d95e59, 40%);
				i
					transform:rotate(180deg);
					-ms-transform:rotate(180deg); /* IE 9 */
					-webkit-transform:rotate(180deg);

			&.vote-abstain
				background-color: #666;
				&:hover 
					background-color: darken(#666666, 40%);

			&.delegate-vote
				background-color: #3498db;


	.vote-box, .results-box
		background: white;
		padding: 20px 0;
		h5 
			text-transform: uppercase;
			margin-top: 0;

		.delegation-box
			display: inline-block;
	.vote-box
		.meta-data
			margin-bottom: 20px

		.change-vote
			font-size: 16px;
			color: black;
			font-weight: bold
			i 
				margin-right: 10px;
			&:hover 
				text-decoration: none
		.secret-results
			margin-right: 6px;
		.secret-results:before
			content: " - ";


	.toggle-results
		span
			margin-right: 5px

	.results-box
		h5 
			margin-bottom: 0;
		.percent 
			font-size: 30px;
		.votes-results
			margin-bottom: 20px;
		.results-summary 
			font-weight: bold
		.votes-afirmative, .votes-afirmative h5
			color: #a4cb53;
		.votes-negative, .votes-negative h5
			color: #d95e59;
		.votes-neutral, .votes-neutral h5
			color: #666666;


/* Comments
-------------------------------------------------- */
.comments
	background: #f9f9f9;
	padding-top: 50px;
	padding-bottom: 50px;

	.comments-inner 
		margin: auto;
		max-width: content_width;
	h4 
		margin-bottom: 30px;

	span
		margin-right: 20px;

	.comment-form
		margin-bottom: 50px;
		margin-top: 50px;
		textarea
			max-width: 500px;
			width: 96%;
			padding: 2%
		.btn 
			background-color: #333;
			color: white;

	.comment-list
		.comment-item
			margin-bottom: 30px;
			max-width: 580px;
			.pull-left
				width: 46px;
				margin-right: 20px;
				.avatar 
					width: 46px;
					height: 46px;
					border-radius: 100px;

			.comment-action
				color: #333;
				font-size: 11px;
				font-weight: bold
				&.vote-comment
					i
						font-weight: bold
						font-size: 20px;
						margin-right: 10px;
				color: #333;
				&:hover 
					text-decoration: none
				&.link-report
					float: right;
					color: #333;
					i 
						margin-right: 5px;
			.comment-counter
				margin: 0px;
				font-weight: bold;
				font-size: 14px;
				color: #333;
				vertical-align: top;
				min-width: 20px;
				display: inline-block
			.spam-message
				display:none;
				.show-spam
					margin: 0px 3px;
					font-size: 0.85em;

			.comment-text
				color: #333;

			.comment-action
				&.like
					&.selected, &:hover
						color: green;
				&.dislike
					&.selected, &:hover
						color: red;
				&.flag
					display: inline-block;
					&.selected, &:hover
						color: orange;
			&.spam
				.comment-text, .comment-actions, .link-report.flag
					display:none;
				.spam-message
					display:block;

/* Signin page
-------------------------------------------------- */
.signin-container, .signup-container, .forgot-container

	form
		label
			display:inline-block;
			float:left;
		.forgot
			float:right;
			a
				color: #666;
				font-size: 12px;
				&:hover 
					color: link_blue;

/* Uservoice feedback button
-------------------------------------------------- */
.uv-icon.uv-bottom-right
	right: 25px !important;





/* Responsive
-------------------------------------------------- */
@media screen and (max-width: 1100px)

	article.proposal 
		.entry-tag
			position: static;
			width: auto;
			padding-bottom: 10px;
			margin-bottom: 20px;
			text-align: left;
			border-bottom: 4px solid #333;
			svg.hexagon
				left: 0;
				position: absolute;
				display: none
			img 
				z-index: 100;
				left: 20px;
				display: none

			span 
				font-size: 14px;
				margin-left: 0;
				padding-top: 10px;
				display: inline-block;


@media screen and (max-width: 700px)
	
	header.app-header
		padding-left: 0;
		#toggleButton
			display: block
		h1#logo
			text-align: center
			width: auto;
			display: block
		img.logo
			margin: auto;
			margin-top: -2px;
		.logo-link 
			display: none
		.user-nav
			.btn 
				border: 0;
			.profile span.name
				display: none
			.login 
				margin-left: 10px;
				span 
					display: none
				i 
					display: inline-block
	aside.nav-proposal
		top: 0;

	section.site-content
		left: 0;

	.inner-container
		max-width: 100%;

	.proposal-options .vote-options 
		.direct-vote
			display: block

		.vote-option
			width: 100%;
			margin-right: 0;
			text-align: center
		
	article.proposal 
		h1 
			font-size: 30px;
		
		.entry-content
			font-size: 100%;

	.uv-icon
		display: none !important;

	/* Snap.js
	----------------------------------------------- */
	.snap-content
		position: absolute;
		background: white;
		top: 0;
		right: 0;
		left: 0;
		bottom: 0;
		width: auto;
		height: auto;
		z-index: 200000;
		-webkit-overflow-scrolling: touch;
		-webkit-transform: translate3d(0, 0, 0);
		-moz-transform: translate3d(0, 0, 0);
		-ms-transform: translate3d(0, 0, 0);
		-o-transform: translate3d(0, 0, 0);
		transform: translate3d(0, 0, 0);

	.snap-drawers
		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		width: auto;
		height: auto;

	.snap-drawer
		position: absolute;
		top: 0;
		right: auto;
		bottom: 0;
		left: auto;
		width: 265px;
		height: auto;
		overflow: auto;
		-webkit-overflow-scrolling: touch;
		-webkit-transition: width 0.3s ease;
		-moz-transition: width 0.3s ease;
		-ms-transition: width 0.3s ease;
		-o-transition: width 0.3s ease;
		transition: width 0.3s ease;

	.snap-drawer-left
		left: 0;
		z-index: 1;

	.snap-drawer-right
		right: 0;
		z-index: 1;

	.snapjs-left .snap-drawer-right,
	.snapjs-right .snap-drawer-left
		display: none;

	.snapjs-expand-left .snap-drawer-left,
	.snapjs-expand-right .snap-drawer-right
		width: 100%;
