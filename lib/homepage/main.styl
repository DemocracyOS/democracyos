/* Vars
-------------------------------------------------- */
header_height = 60px;
spacing = 20px;
border_radius = 3px;
nav_proposal_width = 266px;
content_width = 580px;
link_blue = #2980b9;

/* General
-------------------------------------------------- */

html
	-webkit-font-smoothing: antialiased; 

body 
	color: #4d4d4d;
	overflow: hidden;

h1,h2,h3,h4,h5,h6
	font-weight: bold;
	color: black;

a 
	font-weight: bold
	&:hover 
		text-decoration: none

img.avatar
	border-radius: 100%;



.btn 
	text-transform: uppercase
	font-weight: bold;
	letter-spacing: 1px;
	border: 0;
	&.btn-success
		background-color: #27ae60

.btn-default
	border: 0;

.btn-group > .btn + .dropdown-toggle
	padding-left: 13px;
	padding-right: 13px;

.dropdown-menu
	border-radius: 0;
	text-transform: none
	// box-shadow: none;

.alert
	color: white;
	font-weight: bold
	border: 0;
	border-radius: border_radius;
	&.alert-info
		background-color: #3498db;
	&.alert-success
		background-color: #27ae60;
	&.alert-warning
		background-color: #f1c40f;
	&.alert-block
		background-color: #bebec5;
		color: white;

.system-alert
	margin-top: 20px;


.inner-container
	padding-left: 20px;
	padding-right: 20px;
	margin: auto;
	max-width: content_width;

.small-container
	max-width: 300px;
	padding-left: 10px;
	padding-right: 10px;
	margin: auto;

.title-page 
	text-align: center
	margin-bottom: 30px;
	margin-top: 30px;
	.circle 
		background: #bdc3c7;
		color: white;
		width: 80px;
		height: 80px;
		overflow: hidden
		display: inline-block
		border-radius: 100px;

	i 
		font-size: 30px;
		line-height: 80px;
		color: #7f8c8d

	h1 
		font-size: 12px;
		letter-spacing: 1px;
		text-transform: uppercase

/* Header
-------------------------------------------------- */
header.app-header, aside.nav-proposal, .site-content, .site-content.loading-lock
	position: fixed;

.site-content
	z-index: 1;
	overflow-y: scroll;
	background: white;

#content.site-content
	overflow-y: auto

header.app-header
	z-index: 20;
	top: 0;
	left: 0;
	right: 0;
	height: header_height;
	background: #3498db;
	// border-bottom: 1px solid #2980b9
	color: white;
	padding-left: spacing;
	font-weight: bold;
	text-transform: uppercase;
	font-size: 12px;

	#toggleButton
		width: 26px;
		height: 44px;
		position: absolute;
		left: spacing;
		padding: 20px 0;
		display: none
		.bar-icon
			height: 3px;
			background: white;
			margin-bottom: 5px; 
			display: block
	a 
		color: white;
		&:hover 
			color: white;

	h1 
		display: inline-block;
		width: 300px;
		font-size: 12px;
		margin-top: 12px;
		.logo
			height: 40px;
			display: inline-block
			margin-right: 10px;
			margin-top: -2px;



	.user-nav 
		display: inline-block;
		float: right;
		list-style: none;
		margin-right: spacing;
		position:absolute; 
		right: 0; 
		top: 0px;
		.btn
			color: white;
			height: 60px;
			border-radius: 0;
			background: none;
			padding: 13px 12px;
			&:focus
				outline: 0;
			.caret 
				margin-left: 6px;

		.dropdown-menu
			left: auto;
			right: 0;
			a 
				color: black;
				text-transform: none
				font-weight: bold;
				padding: 10px 20px;
				display: block;
				&:hover 
					background: #2c3e50;
					color: white;

		&.open
			.btn 
				background: rgba(0,0,0,.1);
			.dropdown-toggle
				box-shadow: none;

		.profile 
			img 
				width: 32px;
				border-radius: 100px;
			span.name
				display: inline-block;
				margin-left: 10px;
				font-weight: bold;
				font-size: 12px;
				line-height: 20px;
				display: inline-block
				padding-top: 4px;

		.login
			// background: rgba(0,0,0,.4);
			padding: 6px 12px;
			display: inline-block
