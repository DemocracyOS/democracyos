.auth-facebook-form-page
  header
    &.app-header
      .user-nav
        a[href="/signin"]
          display none
        a[href="/signup"]
          display none

.facebook-auth-form
  text-align center

  p
    margin-bottom 7px

  a
    display inline-block
    border-bottom-width 1px
    border-bottom-style solid
    border-bottom-color transparent
    font-weight normal
    font-size 12px
    line-height 1

    &:hover
      border-bottom-color #66adea
      text-decoration none

  .btn-facebook
    display inline-block
    position relative
    margin 20px 0 50px
    padding 8px 20px 8px 12px
    max-width 100%
    border none
    border-radius 4px
    font-weight 600
    color #fff
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    background #3b5998
    background unquote("linear-gradient(top, #3b5998, #314b80)")

    &:hover
      opacity .9
      color #f7f7f7

    &:active
      opacity 1
      color #f7f7f7
      box-shadow inset 0 0 8px rgba(#082665, .6)

    .facebook:before
      position relative
      top 4px
      margin-right 8px
      padding-right 7px
      border-right 1px solid rgba(#fff, .1)
      font-size 20px
      line-height 0

