/* Vars
-------------------------------------------------- */
:root
  var-header_height: 60px
  var-spacing: 20px
  var-border_radius: 3px
  var-nav_proposal_width: 266px
  var-content_width: 580px
  var-link_blue: #2980b9

/* Header
-------------------------------------------------- */
header.app-header, aside.nav-proposal, .site-content, .site-content.loading-lock
  position: fixed

.site-content
  z-index: 1
  overflow-y: scroll
  background: white

#content.site-content
  overflow-y: auto

header.app-header
  z-index: 20
  top: 0
  left: 0
  right: 0
  height: var(header_height)
  background: #51394a
  // border-bottom: 1px solid #2980b9
  color: white
  padding-left: var(spacing)
  font-weight: bold
  text-transform: uppercase
  font-size: 12px

  #toggleButton
    width: 26px
    height: 44px
    position: absolute
    left: var(spacing)
    padding: 10px 0
    display: none
    .bar-icon
      height: 3px
      background: white
      margin-bottom: 5px
      display: block
  a
    color: white
    &:hover
      color: white

  h1
    display: inline-block
    width: 300px
    font-size: 12px
    margin-top: 12px
    .logo
      height: 40px
      display: inline-block
      margin-right: 10px
      margin-top: -2px

  .user-nav
    display: inline-block
    float: right
    list-style: none
    margin-right: var(spacing)
    position:absolute
    right: 0
    top: 0px
    .btn
      color: white
      height: 60px
      border-radius: 0
      background: none
      padding: 13px 12px
      &:focus
        outline: 0
      .caret
        margin-left: 6px

    .dropdown-menu
      left: auto
      right: 0
      a
        color: black
        text-transform: none
        font-weight: bold
        padding: 10px 20px
        display: block
        &:hover
          background: #2c3e50
          color: white

    &.open
      .btn
        background: rgba(0,0,0,.1)
      .dropdown-toggle
        box-shadow: none

    .profile
      img
        width: 32px
        border-radius: 100px
      span.name
        display: inline-block
        margin-left: 10px
        font-weight: bold
        font-size: 12px
        line-height: 20px
        display: inline-block
        padding-top: 4px

    .login
      // background: rgba(0,0,0,.4)
      padding: 6px 12px
      display: inline-block
      // border-radius: var(border_radius)
      margin-top: 15px
      i
        display: none
        font-size: 20px
      &:hover
        text-decoration: none
