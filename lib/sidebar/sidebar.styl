#filter-container
  background-color rgba(0, 0, 0, 0)
  border-bottom 1px solid #d7dbdd

#status-filter
  margin-bottom 10px
  a
    font-size 12px
    font-weight bold
    color #ffffff
    background-color #909FA0
    &.active
      background-color #727f80
      box-shadow rgba(0, 0, 0, 0.15) 0px 3px 5px 0px inset

#sort-filter
  position relative
  margin-bottom 10px

  &.active
    .dropdown-list
      display block

  .dropdown-list
    display none
    width 100%
    border-radius 3px
    position absolute
    top 100%
    left 0
    z-index 1000
    min-width 160px
    padding 5px 0
    margin 2px 0 0
    font-size 14px
    text-align left
    list-style none
    background-color #fff
    border 1px solid rgba(0,0,0,.15)
    box-shadow 0 6px 12px rgba(0,0,0,.175)

    li
      &.active a
        color #fff
        background-color #337ab7
    a
      display block
      white-space normal
      font-weight bold
      text-transform uppercase
      font-size 12px
      padding 7px 14px 4px
      line-height 1.8
      color #333
      text-decoration none

      &:hover
        background-color rgba(#f1f1f1, .2)

#hide-voted-filter
  label
    font-weight bold
    text-transform uppercase
    font-size 12px
    color #666
    margin-left 5px