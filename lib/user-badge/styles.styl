.user-badge,
.notifications-badge
  position relative

  &.active
    .btn
      background rgba(0,0,0,.1)
    .dropdown-list
      display block

  .btn
    color white
    height 60px
    border-radius 0
    background none
    padding 13px 12px
    .caret
      margin-left 6px

  .dropdown-list
    display none
    position absolute
    right 0
    z-index 1000
    padding 5px 0
    min-width 160px
    width 100%
    font-size 14px
    list-style none
    border 1px solid rgba(#000,.15)
    box-shadow 1px 1px 4px -1px rgba(#000, .175)
    background-color #f9f9f9

    a
      display block
      clear both
      padding 10px 20px
      line-height 1.5
      color black
      text-transform none
      font-weight bold
      text-decoration none

      &:hover
        background #2c3e50
        color white

  .profile,
  .notifications
    img
      width 32px
      border-radius 100px
    span.name,
    span.bell
      display inline
      margin-left 10px
      font-weight bold
      font-size 12px
      line-height 37px
      padding-top 4px
      padding-right 12px
      max-width 150px

    span.bell
      margin 0
      padding-right 0
      font-size 15px
      &:before
        transform s("rotate(%s)", -25deg)
    .caret
      margin-top -3px