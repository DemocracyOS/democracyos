li.sidebar-link
  a.active
    background #fff
    span.title
      color #444
  a
    display flex
    color inherit
    min-height 60px
    padding 10px 20px
    &:hover
      background #fff

  .item-text
    padding-left 10px
    position relative
    flex 1

    .title
      font-size 15px
      line-height 19px
      font-weight 700
      display block
      margin-bottom 0px
      color #666

      i
        font-size .7em
        margin-left 0.4em
        color #27ae60

    span.created-by
      font-size 11px
      opacity .5
      font-weight normal
