/* Vars
-------------------------------------------------- */
border_radius = 3px
/* Topic options view
-------------------------------------------------- */
.proposal-options
  margin 30px 0
  position relative
  .overlay-vote
    position absolute
    left 0
    top 0
    height 100%
    width 100%
    display flex
    flex-direction column
    justify-content center
    align-items center
    background-color rgba(249, 249, 249, 0.9)
    font-weight bold
    text-align center
    span.icon-lock
      font-size 20px
    span.text
      max-width 500px
  .vote-options
    .proxy-vote
      display inline-block
    .vote-option
      display inline-block
      width 30%
      font-size 14px
      text-align center
      margin-right 5%
      color white
      text-transform uppercase
      font-weight bold
      border-radius border_radius
      margin-bottom 20px
      padding 14px
      line-height 1.1
      -webkit-transition all 0.3s ease

      .flaticon
        display inline-block
        margin-right 14px
      span
        display inline-block
      &.vote-yes
        background-color #a4cb53
        &:hover
          background-color darken(#a4cb53, 40%)
      &.vote-no
        background-color #d95e59
        margin-right 0
        &:hover
          background-color darken(#d95e59, 40%)
        i
          transform s("rotate(%s)", 180deg)
          -ms-transform s("rotate(%s)", 180deg) /* IE 9 */
          -webkit-transform s("rotate(%s)", 180deg)

      &.vote-abstain
        background-color #666
        &:hover
          background-color darken(#666666, 40%)

      &.delegate-vote
        background-color #3498db


  .vote-box, .results-box
    background white
    padding 20px 0
    h5
      text-transform uppercase
      margin-top 0
    .delegation-box
      display inline-block
  .vote-box
    #voting-error
      color: black
    .meta-data
      margin-bottom 20px
    .change-vote
      font-size 16px
      color black
      font-weight bold
      i
        margin-right 7px
        position relative;
        top 2px
      &:hover
        text-decoration none
    .secret-results
      margin-right 6px
    .secret-results:before
      content " - "

  .toggle-results
    span
      margin-right 5px

  .results-box
    box-sizing border-box
    width 100%
    margin 0
    h5
      margin-bottom 0
    .percent
      font-size 30px
    .votes-results
      margin-bottom 20px
    .results-summary
      font-weight bold
    .vote-yes, .vote-yes h5
      color #a4cb53
    .vote-abstain, .vote-abstain h5
      color #666666
    .vote-no, .vote-no h5
      color #d95e59
