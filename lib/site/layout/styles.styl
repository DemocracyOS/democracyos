body
  height 100%
#root, #outer-layout
  height inherit
#outer-layout
  display flex
  flex-direction column
  align-items stretch
.caret
  display inline-block
  width 0
  height 0
  margin-left 2px
  vertical-align middle
  border-top 4px dashed
  border-right 4px solid transparent
  border-left 4px solid transparent

.hide
  display none

.center-container
  flex 1
  display flex
  flex-direction column
  align-items center
  overflow auto