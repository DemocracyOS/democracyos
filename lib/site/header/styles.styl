nav.navbar
  padding-right: 15px
  padding-left: 15px
  .navbar-brand
    &.logo-mobile
      display: block
    &.logo-desktop
      display: none
    img
      height 30px
  .nav-item
    &.org-link
      display: none
  .nav-link
    text-transform uppercase
    color inherit
    font-size 12px
    padding-top .7rem
    padding-bottom .7rem
    span.icon-bell
      font-size 16px
      font-weight bold
  #toggleButton
    display none
    float left
    background none
    border none
    color inherit
    padding .5rem 0
    margin-right 10px
    outline: none
    position: relative
    .icon-menu
      font-size 22px
    &:hover
      cursor: pointer
    &::before
      content: ""
      position: absolute
      top: 0
      left: -10px
      width: 40px
      height: 100%

    @media screen and (max-width: 700px)
      display block

@media screen and (min-width: 400px)
  nav.navbar
    .navbar-brand
      &.logo-mobile
        display: none
      &.logo-desktop
        display: block

@media screen and (min-width: 700px)
  nav.navbar
      .nav-item
        &.org-link
          display: block

@import './user-badge/styles'
