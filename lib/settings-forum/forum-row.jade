.forum
  .title.pull-left
    p: strong= forum.title
    a.url(href=forum.url)= forum.url
  a.btn-remove.pull-right(href='#')
    i.glyphicon.glyphicon-trash
  .status.creating
    .loader-wrapper: .loader
    p= t('forum.status.creating')
  .status.destroying
    .loader-wrapper: .loader
    p= t('forum.status.destroying')
  .status.error
    p= t('forum.status.error')
