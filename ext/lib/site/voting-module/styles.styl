.ext-voting-module
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  width: 100vw
  z-index: 10

  .alert
    margin: 0

  .voting-action
    color: #fff
    width: 100%
    padding: 30px 0
    text-align: center
    background-color: #294b68

    p
      display: inline-block
      margin-left: 1em

    .btn
      color: #fff
      border-color: #fff

      &:hover,
      &:active
        color: #294b68
        background-color: #fff

  .voting-success
    color: #fff
    display: flex
    flex-direction: row
    justify-content: center
    flex-wrap: wrap
    align-items: center
    width: 100%
    padding: 1.5em 0
    text-align: center
    background-color: #294b68

    .social-links,
    .text
      margin: 0 7px

    .social-links
      padding: 1em 0 0

    h1
      font-size: 1.5em
      margin: 0 0 .4em

    a,
    .sharer
      padding: .1em .22em 0
      font-size: 1.8em
      color: #fff
      transition: background-color .3s

      &:hover
        background-color: rgba(#fff, .2)
