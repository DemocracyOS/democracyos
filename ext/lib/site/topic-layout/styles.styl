#topic-wrapper
  width: 100%

  @import './topic-article/styles'

  .proyecto-container
    width: 100%
    .proyecto-container-header
      height: 430px
      background-image: unquote("url('/ext/lib/site/topic-layout/bg-video@3x.png')")
      background-size: cover
      display: flex
      align-items: center
      justify-content: center
      .header-content
        max-width: 600px
        text-align: center
        color: #fff
        h1
          margin: 0 0 .2em
          font-size: 58px
          font-weight: 500
          line-height: 1.2
          text-shadow: 2px 2px 4px rgba(81, 81, 81, 0.8)
  .proyecto-main
    padding: 50px 0 40px
    .volver
      color: #f7941d
      font-size: 16px
      font-weight: 500
    .preguntas
      color: #00a8e8
      font-size: 24px
      font-weight: 100
      margin: 30px 0 0
    .clauses
      margin-top: 20px
    .proyecto-share
      &>div
        background-color: #294b68
        color: #fff
        display: flex
        flex-direction: column
        align-items: center
        width: 230px
        padding: 40px 0
        text-align: center
        float: right
        .hashtag
          background-color: #f7941d
          font-size: 15px
          padding: 5px 15px
          margin: 0 0 20px
        a
          width: 40px
          height: 30px
          background-size: auto 30px
          background-repeat: no-repeat
          display: inline-block
          margin-top: 20px
        a.fb
          background-image: unquote("url('/ext/lib/site/topic-layout/icon-facebook@3x.png')")
        a.tw
          background-image: unquote("url('/ext/lib/site/topic-layout/icon-twitter@3x.png')")
          margin-left: 10px
        a.msj
          background-image: unquote("url('/ext/lib/site/topic-layout/icon-mail@3x.png')")
          margin-left: 10px
